<Window x:Class="Chat_Client.Views.NameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Your Name" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter your display name:" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="NameTextBox" Width="200"/>
            <Button Content="OK" Width="60" Margin="10,0,0,0" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
