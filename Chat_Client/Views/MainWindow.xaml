<Window x:Class="Chat_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Chat_Client.Viewmodel"
        xmlns:model="clr-namespace:Chat_Client.Models"
        xmlns:conv="clr-namespace:Chat_Client.Converters"
        mc:Ignorable="d"
        Title="Chat Client" Height="500" Width="800">

    <Window.Resources>
        <conv:BoolToAlignmentConverter x:Key="BoolToAlignment"/>
        <conv:IncomingToColorConverter x:Key="IncomingToColor"/>
        <conv:MessageBackgroundConverter x:Key="MessageBackground"/>
        <conv:SystemMessageVisibilityConverter x:Key="SystemMessageVisibility"/>
        <conv:ChatMessageVisibilityConverter x:Key="ChatMessageVisibility"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat messages -->
        <ListBox ItemsSource="{Binding Messages}" Grid.Row="0"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type model:Message}">
                    <Border Padding="10" Margin="5" CornerRadius="12"
                            MaxWidth="350"
                            Background="{Binding Converter={StaticResource MessageBackground}}"
                            HorizontalAlignment="{Binding IsIncoming, Converter={StaticResource BoolToAlignment}}">
                        <StackPanel>
                            <!-- System message -->
                            <TextBlock Text="{Binding Text}"
                                       FontStyle="Italic"
                                       Foreground="Gray"
                                       TextAlignment="Center"
                                       Visibility="{Binding Type, Converter={StaticResource SystemMessageVisibility}}"/>
                            <!-- Chat message -->
                            <StackPanel Visibility="{Binding Type, Converter={StaticResource ChatMessageVisibility}}">
                                <TextBlock Text="{Binding Sender}" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Foreground="White"/>
                                <TextBlock Text="{Binding Timestamp, StringFormat=t}" FontSize="10" Foreground="LightGray" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Status -->
        <TextBlock Text="{Binding Status}" Foreground="Gray" Grid.Row="1" Margin="0,5,0,5"/>

        <!-- Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBox Width="600" 
         Text="{Binding InputMessage, UpdateSourceTrigger=PropertyChanged}" 
         AcceptsReturn="True" 
         VerticalScrollBarVisibility="Auto"
          PreviewKeyDown="TextBox_PreviewKeyDown"/>



        </StackPanel>
        <Button Content="Send" 
Command="{Binding SendCommand}"
Background="#28a745"   
Foreground="White"
FontWeight="Bold"
Padding="5,2"
BorderThickness="0"
Cursor="Hand" Margin="604,0,27,0" Grid.Row="2" Height="18" VerticalAlignment="Center">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" 
                        CornerRadius="4" 
                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
