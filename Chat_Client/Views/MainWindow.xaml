<Window x:Class="Chat_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:Chat_Client.Viewmodel"
        Title="Chat Client" Height="450" Width="800">
    <Window.Resources>
        <local:BoolToAlignmentConverter x:Key="BoolToAlignment"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat messages -->
        <ListBox ItemsSource="{Binding Messages}" Grid.Row="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text}" 
                               Padding="5"
                               TextWrapping="Wrap"
                               HorizontalAlignment="{Binding IsIncoming, Converter={StaticResource BoolToAlignment}}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Status -->
        <TextBlock Text="{Binding Status}" 
                   Foreground="Gray" 
                   Grid.Row="1" 
                   Margin="0,5,0,5"/>

        <!-- Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBox Width="600" Text="{Binding InputMessage, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Send" Width="80" Margin="10,0,0,0" Command="{Binding SendCommand}"/>
        </StackPanel>
    </Grid>
</Window>
